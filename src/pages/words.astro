---
import Layout from "../layouts/Layout.astro";
import Dropdown from "../components/Dropdown.astro";
---

<Layout>
    <script type="module" src="/scripts/dropdown.js"></script>
    <div class="flex flex-col lg:flex-row h-full">
        <div class="lg:w-1/2 text-center bg-secondary p-[40px]">
            <div class="bg-accent rounded-[7px] h-full">
                <div class="text-3xl text-fbright p-[20px]">Add new word</div>
                <div
                    class="w-4/5 h-[2px] bg-gradient-to-r from-transparent via-secondary to-transparent mx-auto"
                >
                </div>
                <div class="pt-5">
                    <input class="bg-secondary rounded-[8px] w-1/3 h-8" />
                </div>
                <div class="pt-5">
                    <button class="worder-button w-1/4">Add</button>
                </div>
                <div class="pt-5 pb-5 flex justify-center">
                    <Dropdown
                        options={[
                            { id: 1, desc: "Noun" },
                            { id: 2, desc: "Verb" },
                        ]}
                        placeholder="Select a word"
                        customClass="w-1/5 "
                    />
                </div>
            </div>
        </div>
        <div class="w-full h-full lg:w-1/2 text-center p-1.5 bg-primary">
            right
        </div>
    </div>
</Layout>
